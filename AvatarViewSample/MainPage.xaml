<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvatarViewSample.MainPage"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <core:SfAvatarView AvatarSize="ExtraLarge"
                               HeightRequest="200"
                               AvatarShape="Square"
                               ContentType="Custom"
                               Aspect="AspectFill">
                <core:SfAvatarView.ImageSource>
                    <UriImageSource Uri="https://cdn.syncfusion.com/content/images/Images/Camtasia_Succinctly.png?v=22022017060923"/>
                </core:SfAvatarView.ImageSource>
            </core:SfAvatarView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
